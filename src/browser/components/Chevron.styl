.chevron
  padding 15px 0

  i
    display block
    margin 0 auto
    width 25px
    height 25px
    border-top 1px solid #fff
    border-right 1px solid #fff
    border-width 6px
    transform rotate(135deg)
    opacity 0.9

  &.-animated
    animation arrowBounce 2.5s infinite

  &.-clickable:hover
    cursor pointer
