.message-overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display none
  background #010101
  z-index 5
  text-align center
  color #fff

  &.-visible
    display table
    animation fadeIn 1s

  &.-error
    color #C01C1C

  > div
    display table-cell
    vertical-align middle

    > span
      display block
      font-size 4em

    > p
      font-size 1.5em
      opacity 0.7
      width 70%
      margin 0 auto

@media screen and (max-width: 460px)
  .message-overlay
    > div
      > span
        font-size 3em
      > p
        font-size 1em
