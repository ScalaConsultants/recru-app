.sign-img

  div
    position relative
    height 100%

    .benefits-list
      position absolute
      top 55%
      left 30%
      font-size 1.5vw
      font-weight 600
      //width 90%
      li
        list-style-type none
        //display inline
        //padding-left 2vw
        //display list-item
        animation-duration 1.2s
        animation-name benefitsListIn

      li:before
        white-space nowrap
        content url('../../../assets/img/packYourBag/scalac_logo_icon2.png')
        padding-right 0.5vw

      //li:first-child
      //  font-size 1.7vw
      //  text-decoration underline
      //
      //li:first-child:before
      //  content none

    img#img1
      position absolute
      bottom 76%
      right 15%
      width 30%
      float right
      cursor pointer
      transition: opacity 0.4s easeOutCirc;

    img#img1:hover
      opacity 0.75

    .footPrint
      width 3%
      position absolute
      opacity 0
      z-index 9999


@media (max-width: 767px)
  .sign-img
    div
      .benefits-list
        width 90%
        left 0
        font-size 2.5vw


@media (max-width: 480px)
  .sign-img
    div
      .benefits-list
        text-align center
        font-size 3.0vw
        li
          margin 0 1vw 1vw 1vw
          display inline