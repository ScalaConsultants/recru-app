.backpack-list
  list-style-type none
  text-align center
  padding 0
  //list-style-image url("../../../assets/img/packYourBag/scalac_logo_icon.png")

  > li
    font-size 1.5vw
    font-weight 600
    display inline
    margin 0 1vw 1vw 1vw
    border 1px solid green
    transition all .3s ease-in-out;

  > li:before
    white-space nowrap
    content url('../../../assets/img/packYourBag/scalac_logo_icon.png')
    padding-right 0.5vw

  > li:hover
    //transform scale(1.1)
    color red
    transform translateY(20px)


@media (max-width: 767px)
  .backpack-list

    > li
      font-size 2.5vw


@media (max-width: 480px)
  .backpack-list

    > li
      font-size 3.0vw