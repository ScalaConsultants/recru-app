.fifth-screen
  position relative
  background-color #010101
  text-align center
  color #ffffff
  font-size 23px
  font-weight 300

  header
    position absolute
    width 100%
    height 15%
    top 0
    display table
    font-size 23px
    font-weight 300

    span
      display table-cell
      vertical-align middle
      font-size 36px
      font-weight 500

  .contactForm
    position absolute
    width 100%
    height 85%
    top 15%

    h2
      font-weight 300
      font-size 18px
      display block

    input[type=file]
      visibility hidden
      position absolute
      z-index 0

    input[type=text]
    input[type=url]
    input[type=email]
      margin 0 auto
      background none
      padding 1vh
      width 300px
      border 1px solid #fff

    input[type=text]:active
    input[type=text]:focus
    input[type=email]:active
    input[type=email]:focus
    input[type=url]:active
    input[type=url]:focus
    input.active
      border-color #ff0000
      color #ff0000

    #drop
      border 2px dashed #fff
      margin 0 auto
      width 300px
      height 20vh
      color #aaa
      text-align center
      box-sizing border-box
      display flex
      cursor pointer
      display table

      &.hover
      &.active
        border-color #FF0000

      span
        vertical-align middle
        display table-cell

      &.active span
        color #FF0000

    button
      background #c01c1c
      color #ffffff
      border none
      width 300px
      transition all .25s
      cursor pointer
      padding 2.5vh 0
      margin 5vh auto

      &[disabled]
        opacity 0.5
        background #aaa

      &:not([disabled]):hover
        background #9f1313

      i
        width 6vh
        height 6vh
        display inline-block
        background url('../../../../assets/img/upload.png') no-repeat
        background-size cover
        vertical-align middle
        margin-right 20px

      &.-pending
        i
          display none

      span
        display inline-block
        margin 0px
        font-size 20px
        font-weight 400

  #drop
    border 2px dashed #fff
    margin auto auto 70px
    border-radius 0px
    width 300px
    height 200px
    max-width 80%
    color #aaa
    text-align center
    padding 10px
    box-sizing border-box
    display flex
    flex-direction column
    cursor pointer

    &.hover
    &.active
      border-color #FF0000

    span
      vertical-align middle
      display table-cell

      &.text
        margin-bottom 0

      &.hint
        font-size 14px
        margin-top 0

      &.hint.-error
        color #c01c1c

    &.active span
      color #FF0000

@media (max-width: 480px)
  .fifth-screen
    header
      font-size 24px

    .contactForm
      span
        font-size 16px

      h2
        font-size 16px

      input[type=text]
      input[type=url]
      input[type=email]
        max-width 80%

      input[type=text]
        font-size 14px

      #drop
        max-width 80%

      button
        max-width 80%
        span
          font-size 16px
