.fourth-screen
  position relative
  padding-bottom 30px

  #error-text
    margin 20px auto
    text-align center

    span
      color #ffffff
      font-size 1em
      background-color #c01c1c
      padding 5px 10px

  > .chevron
    width 100%
    position absolute
    z-index 2
    bottom 0

    > i
      border-color black
      opacity 0.2

  .screen-title
    width 100%
    text-align center
    margin 2% auto 2% auto
    h1
      font-size 3.5vw
      font-weight 300

  .myDiv
    //border 1px solid blue
    width 100%
    padding 1% 4%
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    .geek-img
      //border 1px solid green
      display inline-block
      width 35%
      height 65vh
      padding 0% 2% 0% 3%
      text-align right
      margin auto auto
      img
        height 100%
        width auto

    ul
      //border 1px solid orange
      display inline-block
      width 65%
      list-style none
      padding 0 0 0 3%
      margin auto auto
      text-align left

      li
        border 1px solid blueviolet
        display inline-block
        position relative
        text-align center
        margin 3% 2%

        .hint
          position absolute
          bottom 90px
          left 0
          background #000
          opacity 0.7
          color #fff
          text-align center
          width 90px
          padding 0 5px
          margin 0 15px
          font-size 14px
          line-height 20px
          border-radius 5px

        .hint::after
          content ''
          position absolute
          width 0
          height 0gulp
          border-left 5px solid transparent
          border-right 5px solid transparent
          border-top 7px solid #000
          bottom -7px
          left 43px
          margin 0 auto

        img
          max-width 65px
          vertical-align middle
          margin 0 20px 0 0

        form
          border 2px solid deeppink
          display inline-block
          vertical-align middle

          input
            display none

          label
            border 1px solid green
            float right
            cursor pointer

          label.star:before
            content ''
            width 32px
            height 40px
            display block
            background-image url('../../../assets/img/skills/rating-arrows.svg')
            background-repeat no-repeat
            background-size 104px 40px
            background-position 0px
            transition transform .25s

          input:checked ~ label.star:before
            background-position -75.2px 0 !important

          label.star:hover:before
            transform scale(1.1)

          label.star:hover:before
          label.star:hover ~ label.star:before
            background-position -37.6px 0

      .otherSkills
        //border 1px solid pink
        img
          width 50px
          height 50px
        span
          display block
          margin 10px auto
          padding 0 10px


@media (max-width: 960px)
  .fourth-screen
    .screen-title
      margin 5% auto 5% auto
      h1
        font-size 5vw

    > .chevron
      position relative

    .myDiv
      display block
      padding 1%
      .geek-img
        display none
        width 0
        height 0
        img
          display none

      ul
        display block
        padding 0
        margin-bottom 20px
        text-align center
        li
          margin 3% 2%

        .otherSkills
          margin 10px auto



@media (max-width: 767px)
  .fourth-screen
    .screen-title
      margin 5% auto 5% auto
      h1
        font-size 6vw

    .myDiv
      ul
        li
          margin 3% 2%


@media (max-width: 480px)
  .fourth-screen
    .screen-title
      margin 8% auto 8% auto
      h1
        font-size 7vw

    .myDiv
      ul
        li
          width 100%
          margin 5% auto
