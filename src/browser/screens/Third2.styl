.third2-screen
  position relative
  //overflow-y hidden

  .screen-title
    width 100%
    height 15%
    text-align center
    position absolute
    top 0
    //background-color yellow
    display table

    > h1
      font-size 4vw
      font-weight 300
      display table-cell
      vertical-align middle

  .screen-list
    display block
    width 100%
    height 10%
    position absolute
    top 15%
    //border 4px solid green

  > .chevron
    width 100%
    position absolute
    z-index 2
    bottom 0
    margin-bottom 0

    > i
      border-color black
      opacity 0.2

  .bag-img
    display inline-block
    width 50%
    height 75%
    position absolute
    bottom 0
    left 0
    //border 4px solid blue

  .sign-img
    display inline-block
    width 50%
    height 75%
    position absolute
    bottom 0
    right 0
    //border 4px solid black


@media (max-width: 767px)
  .third2-screen

    .screen-title

      > h1
        font-size 6vw

    .screen-list
      height 15%
      top 15%

    .bag-img
      height 50%
      bottom 20%

    .sign-img
      height 50%
      bottom 20%

@media (max-width: 480px)
  .third2-screen

    .screen-title
      height 10%

      > h1
        font-size 6vw
        font-weight 300

    .screen-list
      height 15%
      top 10%

    .bag-img
      display block
      width 100%
      height 35%
      top 25%

    .sign-img
      display block
      width 100%
      height 40%
      top 60%


