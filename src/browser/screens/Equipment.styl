.equipment-screen

  .right
    display flex
    align-items center
    position relative

    .chevron
      position absolute
      bottom 20px
      width 70%

  .content
    display flex
    flex-direction column
    width 100%
    max-width 700px

    h1
      font-size 2.5em
      text-transform uppercase

        p
          margin 0

  .options
    display flex

    .option
      align-items center
      cursor pointer
      display flex
      flex 1
      flex-direction column
      text-align center

      p
        font-weight 700

      img
        width 100px

@media screen and (max-width: 767px)
  .equipment-screen
    .right
      .chevron
        position relative
        width 100%
        bottom 0px

    .content
      h1
        font-size 2em
        text-transform uppercase

    .container
      padding 0 40px

      .desc
        display none

    .content-list
      display flex

    .options

      .option

        img
          width 50px

@media screen and (max-width: 520px)
  .equipment-screen
    .options
      .option
        p
          font-size 12px

@media screen and (max-width: 420px)
  .equipment-screen
    .content-list
      margin-top 45px

@media screen and (max-width: 360px)
  .equipment-screen
    .options
      .option
        p
          display none