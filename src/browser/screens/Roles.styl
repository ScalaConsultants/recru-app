.roles-screen
  align-items center
  background #fff url('../../../assets/img/positions/mountains.svg') no-repeat
  background-size cover
  display flex
  flex-direction column
  font-size 12px
  overflow-y hidden

  h1
    font-size 2.5em
    font-weight 700
    text-transform uppercase

  ul
    display flex
    justify-content center
    align-items flex-end
    height 100%
    width 100%
    padding 0
    margin 0

    li
      cursor pointer
      display flex
      flex-direction column
      width 25%
      justify-content flex-end
      position relative
      height 100%

      div
        align-items center
        display flex
        flex-direction column

        p
          bottom 0px
          box-sizing border-box
          font-size 2em
          text-align center
          color #000
          margin 0
          opacity .2
          transition opacity .3s ease-in-out
          -webkit-transition opacity .3s ease-in-out
          -moz-transition opacity .3s ease-in-out

        img
          bottom 0
          height 100%
          transition .5s linear
          -webkit-transition .5s linear
          -moz-transition .5s linear

      div:hover
        p
          opacity 1
        img
          transform scale(1.1)

    li:nth-child(2)
        height 65%
      p
        order 1

@media (max-width: 767px)
  .roles-screen
    background transparent

    h1
      margin-bottom 0

    ul
      flex-direction column
      justify-content flex-start

      li
        margin 20px 0
        width 100%
        height 25%

        div
          height fit-content
          img
            order 1
          p
            opacity 1
            order 0

      li:nth-child(1)
        order 1

      li:nth-child(2)
        order 0
        height 25%
        p
          order 0

      li:nth-child(3)
        order 2


@media (max-width: 480px),
(max-height: 520px)
  .roles-screen
    ul
      justify-content center
      li
        height auto
        img
          display none
      li:nth-child(2)
        height auto