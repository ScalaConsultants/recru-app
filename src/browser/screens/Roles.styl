.roles-screen
  align-items: center;
  background #fff url('../../../assets/img/positions/mountains.svg') no-repeat
  background-size cover
  background-position 0 -25px
  display flex
  flex-direction: column;
  font-size 12px
  height 100vh
  overflow-y hidden

  h1
    font-size 2.5em
    font-weight 700
    text-transform uppercase

  ul
    display flex
    justify-content center
    align-items flex-end
    width 100%
    height 100vh
    padding 0
    margin 0

    li
      cursor pointer
      display flex
      flex-direction column
      width 25%
      height 100%
      position relative

      div
        align-items center
        display flex
        flex-direction column
        height 80vh
        justify-content: flex-end;

        p
          bottom 0px
          box-sizing border-box
          font-size 2em
          text-align center
          color #000
          margin 0
          opacity .2
          transition opacity .3s ease-in-out
          -webkit-transition opacity .3s ease-in-out
          -moz-transition opacity .3s ease-in-out

        img
          bottom 0
          height 100%
          transition .5s linear
          -webkit-transition .5s linear
          -moz-transition .5s linear

      div:hover
        p
          opacity 1
        img
          transform: scale(1.1);

    li:nth-child(2)
      img
        height 65%
      p
        order 1

@media (max-width: 767px)
  .roles-screen
    background transparent

    ul
      flex-direction column
      margin 20px 0

      li
        margin 20px 0
        width 100%

        div

          p
            opacity 1

      li:nth-child(1)
        order 1

      li:nth-child(2)
        order 0
        img
          height 100%
        p
          order 0

      li:nth-child(3)
        order 2