.roles-screen
  align-items center
  background #fff url('../../../assets/img/positions/mountains.svg') no-repeat
  background-size cover
  background-position 0
  display flex
  flex-direction column
  font-size 12px
  overflow-y hidden

  h1
    font-size 3.5em
    font-weight 700
    text-transform uppercase
    margin 10px 0 0

  ul
    display flex
    justify-content center
    align-items flex-end
    height 93%
    width 100%
    padding 0
    margin 0

    li
      cursor pointer
      display flex
      flex-direction column
      width 20%
      justify-content flex-end
      position relative
      height 100%

      div
        align-items center
        margin-bottom 60px
        display flex
        flex-direction column
        justify-content flex-end
        height 100%

        p
          bottom 0px
          box-sizing border-box
          font-size 2em
          text-align center
          color #000
          margin 0 0 35px 0
          position absolute
          transition opacity .3s ease-in-out

        p.selected
          color red
          padding 2px 5px

        img
          bottom 0
          height 90%
          transition .5s linear

      div:hover
        img
          transform scale(1.1)

    li:nth-child(2)
        height 65%
      p
        order 1

@media (max-width: 1024px)
  .roles-screen
    ul
      li
        width 20%
        div
          p
            font-size 1.5em

@media (max-width: 767px)
  .roles-screen
    background transparent

    h1
      margin-bottom 50px
      font-size 2.5em

    ul
      justify-content space-evenly
      flex-direction column

      li
        margin 20px 0
        width 100%
        height 25%

        div
          margin 30px 0
          img
            order 1
          p
            font-size 2em
            opacity 1
            order 0
            position relative

      li:nth-child(1)
        order 1

      li:nth-child(2)
        order 0
        height 25%
        p
          order 0

      li:nth-child(3)
        order 2

