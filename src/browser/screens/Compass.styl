.compass-screen

    h3
      margin 30px 0 0

    .list
      display flex
      width 100%

    .rules
      justify-content space-evenly
      img
        height 100px

    .item
      margin 10px 0

      span
        font-weight 500
        opacity 0
        transition opacity .3s ease-in-out

      p
        font-weight 700

    .item:hover
      span
        opacity 1

    .values
      flex-wrap wrap

      .item
          img
            height 50px

@media screen and (max-width: 767px)
  .compass-screen
    .right
      .chevron
        position relative
        width 100%
        bottom 0px

    .content
      width 100%

      h1
        font-size 2em

      .rules
        img
          height 70px

      .values
        background transparent
        padding 0

        img
          height 35px

@media screen and (max-width: 460px)
  .compass-screen

    .content
      height 100%
      display flex
      flex-direction column

      .values
      h3
        display none