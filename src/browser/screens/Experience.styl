.experience-screen

  .right
    display flex
    align-items center
    position relative

    .chevron
      position absolute
      bottom 20px
      width 70%

  .content
    display flex
    flex-direction column
    width 100%
    max-width 700px

    h1
      font-size 2.5em
      text-transform uppercase

    .bold
      font-weight 700

    p
      font-size 18px
      margin 0 5px

.experience-level
  display flex
  margin-top 7em

  .level
    align-items center
    cursor pointer
    display flex
    flex-direction column
    flex 1
    height 250px
    justify-content space-around
    text-align center

    img
      width 50px
      transform rotate(180deg)

    h4, h5
      margin 0

    h4
      font-size 18px

    h5
      font-size 16px
      font-weight 400

    .icons
      display flex
      flex-direction column
      flex 2
      justify-content center

    .desc
      flex 1

  .level:hover
    background #f5f5f5

  .active
    background #f5f5f5

@media screen and (max-width: 767px)
  .experience-screen
    .container
      padding 0 40px

    .content
      h1
        font-size 2em

@media screen and (max-width: 520px)
  .experience-level
    margin 0
    padding 0 0 30px 0
    flex-direction column
    .level
      height 220px