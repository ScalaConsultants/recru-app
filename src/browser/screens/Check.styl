.check-screen

  .right
    display flex
    align-items center
    position relative

    .chevron
      position absolute
      bottom 20px
      width 70%

  .content
    display flex
    flex-direction column
    width 100%
    max-width 700px

    h1
      font-size 2.5em
      text-transform uppercase

  .checkbox-list
      display flex
      flex-direction column
      align-items end

    .list-item
      margin 10px 0

    input
      display none

    label
      align-items flex-start
      display flex
      flex-direction row
      padding 0
      cursor pointer

    label:before
      position absolute
      margin-left -35px
      content ''
      width 25px
      height 25px
      opacity 0.8
      display block
      background #d9d9d9 url('../../../assets/img/bullet.svg') no-repeat
      background-position -100px 0
      transition transform .25s

    input:checked ~ label:before
      background-position 0

    label:hover:before
    label:hover ~ label:before
      background-position -32px 0

@media screen and (max-width: 1120px)
  .check-screen
    .checkbox-list
      margin-left 30px

@media screen and (max-width: 767px)
  .check-screen
    .container
      padding 0 40px

    .content
      h1
        font-size 2em