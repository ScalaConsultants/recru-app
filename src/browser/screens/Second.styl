.second-screen
  position relative
  overflow-y hidden

  > div
    position absolute
    bottom 0
    right 0
    height 100%
    display flex
    align-items stretch
    width 100%

    p
      font-size 3.5vw
      font-weight 700
      margin 0
      text-transform uppercase

    .left-side
      background url('../../../assets/img/second/bg.svg') no-repeat
      width 50%
      background-size auto 100%
      align-items stretch
      position relative

      .cloud
        position absolute
        animation pulse 15s infinite

      .c1
        left 5%
        top 25%
        width 35%
        animation-delay 5s

      .c2
        top 5%
        width 45%
        left 30%

    .right-side
      display flex
      flex-flow column nowrap
      justify-content center
      width 35%
      position relative
      margin 0 40px

      .content
        align-items flex-start
        justify-content center

      .path
        display flex
        align-items center
        cursor pointer
        transition 1s

        .scalac
          width 40px
          margin-right 15px

        .scalac
          width 50px

      .arrow
        position absolute
        bottom 20px
        width 70%

  @media (max-width: 1024px)
    .second-screen
    > div
      .right-side
        align-items center
        flex 6
      .left-side
        flex 4

  @media (max-width: 767px)
    .second-screen
    > div
      width 100%

      .left-side
        display none

      .right-side
        height 100%
        width 100%

        .arrow
          width 100%

        .content
          height 100%

        p
          font-size 2em

        > h1
          position relative
          width auto
          font-size 12 vw
          text-align center
          left initial

          span:nth-child(2)
            left initial

          span:nth-child(3)
            left initial
