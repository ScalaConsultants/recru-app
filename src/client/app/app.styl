// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@require '../../../node_modules/normalize.css/normalize.css'
@import url('http://fonts.googleapis.com/css?family=Open+Sans:700,400,300')

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  width 100%
  height 100%
  overflow hidden

body
  font-family 'Open Sans', sans-serif
  font-weight 400
  color #030303
  font-size 16px
  line-height 1.5
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

strong
  font-weight 700

#app
  &
    width 100%
    height 100%

  :focus
    outline-style none

.page
.screen
  overflow hidden
  width 100%
  height 100%

.page
  transition transform .3s

