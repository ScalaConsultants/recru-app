// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@import '../../../node_modules/normalize.css/normalize.css'
@import url('http://fonts.googleapis.com/css?family=Open+Sans:700,400,300')
@import './animations'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  width 100%
  height 100%
  overflow hidden

body
  font-family 'Open Sans', sans-serif
  font-weight 400
  color #030303
  font-size 16px
  line-height 1.5
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

strong
  font-weight 700

#app
  &
    width 100%
    height 100%

  :focus
    outline-style none

.page
.screen
.screen-list
  width 100%
  height 100%

.screen-list
  transition transform 1000ms ease

.screen
  overflow hidden

::-webkit-scrollbar {
    width:5px;
}

::-webkit-scrollbar-track {
    -webkit-border-radius:5px;
    border-radius:5px;
    background:rgba(0,0,0,0.01);
}

::-webkit-scrollbar-thumb {
    -webkit-border-radius:5px;
    border-radius:5px;
    background:rgba(0,0,0,0.2);
}

::-webkit-scrollbar-thumb:hover {
    background:rgba(0,0,0,0.4);
}

::-webkit-scrollbar-thumb:window-inactive {
    background:rgba(0,0,0,0.05);
}
