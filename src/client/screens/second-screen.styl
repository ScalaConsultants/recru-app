.second-screen
  position relative

  > div
    position absolute
    bottom 0
    right 0
    width 60%
    max-height 100%

    > h1
      font-size 4vw
      font-weight 300
      position absolute
      left -100px
      top 0
      width 600px

      > button
        font-weight 300
        font-size 14px
        letter-spacing 1px
        padding 0px
        background none
        border none

      > span
        font-size 1em
        display block
        line-height 1.27em

      > span:nth-child(2)
        position relative
        left: -178px

      > span:nth-child(3)
        position relative
        left: -116px

        span,strong
          display inline

      > .chevron
        width 125px

        > i
          border-color black
          opacity 0.2

    > img
      width 100%
      max-width 1200px
      max-height 100%
      bottom 0









