.third-screen

  ul
    display block
    width 100%
    height 100vh
    padding 0
    margin 0

    :hover
      li
        width 40px

    li 
      position relative
      display block
      width 25%
      height 100vh
      float left
      transition all 0.5s
      -webkit-transition all 0.5s
      -moz-transition all 0.5s

      p
        position absolute
        bottom 40px
        box-sizing border-box
        padding 20px
        left 10%
        width 80%
        text-align center
        color #ffffff
        border 2px solid #ffffff
        
      img
        display block
        height 100%

  ul:hover
    li
      width 15%
    li:hover
      width 55%
      