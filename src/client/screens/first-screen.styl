.first-screen
  background url('../../../assets/img/bg.jpg') no-repeat
  background-size cover
  background-attachment fixed
  position relative

  &:after
    content ''
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background-color rgba(0,0,0,0.5)
    z-index 1

  .centering-wrapper
    display table
    width 100%
    height 100%

    > header
      display table-cell
      position relative
      text-align center
      vertical-align middle
      z-index 2

    h1, h2
      color #fff
      font-weight 300
      margin-top 0
      text-align center
      word-spacing 1px

    h1
      font-size 3.7em
      margin-bottom 15px

    h2
      font-size 1.86em
      margin-bottom 95px

    .form-control
      position relative
      width 310px
      max-width 90%
      margin 0 auto

      > span
        display none
        position absolute
        background-color #c01c1c
        color #ffffff
        font-size 1em
        padding 5px 10px
        right 0

      > input
        border 3px solid #fff
        background-color transparent
        color #fff
        padding 15px 40px
        font-size 2em
        font-weight 300
        text-align center
        width 100%

      &.-error > span
        display block

      &.-error > input
        border 3px solid #c01c1c

      > input::-webkit-input-placeholder
        color #fff
        opacity 0.7

      > input:-moz-placeholder
        color #fff
        opacity 0.7

      > input::-moz-placeholder
        color #fff
        opacity 0.7

      > input:-ms-input-placeholder
        color #fff
        opacity 0.7

  > .chevron
    display block
    width 100%
    position absolute
    z-index 2
    bottom 0

@media screen and (max-width: 460px)
  .first-screen
    .centering-wrapper
      header
        h1
          font-size 28px
        h2
          font-size 20px
      .form-control
        > input
          font-size 14px
