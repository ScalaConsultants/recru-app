.fourth-screen
  position relative
  padding-top 30px

  > .chevron
    width 100%
    position absolute
    z-index 2
    bottom 0

    > i
      border-color black
      opacity 0.2

  header
    font-size 36px
    text-align center
    font-weight 300
    color #010101
    margin-bottom 60px

  ul
    display block
    width 1000px
    max-width 100%
    margin auto auto 40px
    list-style none
    padding 0

    li
      width 33.3333%
      display inline-block
      margin-bottom 40px
      img
        max-width 80px
        vertical-align middle
        margin 0 40px 0 20px
        opacity 0.5
      div
        display inline-block
        vertical-align middle
        img
          height 50px
          fill #444
          cursor pointer
          margin 0
          margin-left -20px
        img:hover
          opacity 1.0

    li:hover
      >img
        opacity: 1.0

@media (max-width: 767px) 
  .fourth-screen
    overflow scroll

    > .chevron
      width 100%
      position initial
    ul
      margin-bottom 20px
      li
        width: 50%

@media (max-width: 480px)
  .fourth-screen
    ul
      
      li
        width 90%
        display block
        margin 0 auto 20px