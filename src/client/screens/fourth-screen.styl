.fourth-screen
  position relative
  padding-top 30px

  > .chevron
    width 100%
    position absolute
    z-index 2
    bottom 0

    > i
      border-color black
      opacity 0.2

  header
    font-size 36px
    text-align center
    font-weight 300
    color #010101
    margin-bottom 60px

  ul
    display block
    width 1000px
    max-width 100%
    margin auto auto 40px
    list-style none
    padding 0

    li
      width 33.3333%
      display inline-block
      margin-bottom 40px
      img
        max-width 80px
        vertical-align middle
        margin 0 0px 0 20px
        opacity 0.5
      
      form
        display inline-block
        vertical-align middle

        input 
          display none

        label 
          float: right;
          padding: 10px 5px;
          font-size: 36px;
          color: #444;
          transition: all .2s;


        input:checked ~ label:before 
          content: '\f005';
          color: #FD4;
          transition: all .25s;


        input.star-5:checked ~ label.star:before 
          color #FE7
          text-shadow 0 0 20px #952


        input.star-1:checked ~ label.star:before  
          color #F62

        label.star:hover 
          transform rotate(-15deg) scale(1.3)


        label.star:before 
          content '\f006'
          font-family FontAwesome
      

    li:hover
      >img
        opacity: 1.0

@media (max-width: 767px) 
  .fourth-screen
    overflow scroll

    > .chevron
      width 100%
      position initial
    ul
      margin-bottom 20px
      li
        width: 50%

@media (max-width: 480px)
  .fourth-screen
    ul
      
      li
        width 90%
        display block
        margin 0 auto 20px