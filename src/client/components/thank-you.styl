.thank-you
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display none
  background #010101
  z-index 5
  text-align center
  color #fff

  &.-visible
    display table
    animation fadeIn 1s

  > div
    display table-cell
    vertical-align middle

    > span
      font-size 4em

    > p
      font-size 1.5em
      opacity 0.7
